{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": ["**/node_modules", "**/examples", "**/dist", "**/*.test.ts", "**/*.e2e.ts"]
}
